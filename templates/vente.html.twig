
{% extends 'base.html.twig' %}

{% block title %}Voitures en Vente{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Nos Voitures en Vente</h1>
    <div class="row">
        {% for voiture in voitures %}
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="{{ asset(voiture.image) }}" class="card-img-top" alt="Image de {{ voiture.marque }} {{ voiture.modele }}">">
                    <div class="card-body">
                        <h5 class="card-title">{{ voiture.marque }} {{ voiture.modele }}</h5>
                        <p class="card-text">Prix: {{ voiture.prix | number_format(0, ',', ' ') }} €</p>
                        <p class="card-text">Kilométrage: {{ voiture.km }} km</p>
                        <a href="{{ path('vente_show', { id: voiture.id }) }}" class="btn btn-primary">Voir Détails</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-muted">Aucune voiture disponible pour le moment.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}