        {{ form_label(form.anneeMiseEnCirculation, 'Année de Mise en Circulation', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.anneeMiseEnCirculation, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.anneeMiseEnCirculation) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.transmission, 'Transmission', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.transmission, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.transmission) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.options, 'Options', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.options, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.options) }}
    </div>

    <button type="submit" class="btn btn-primary">Ajouter la Voiture</button>
    {{ form_end(form) }}
</div>
{% endblock %}